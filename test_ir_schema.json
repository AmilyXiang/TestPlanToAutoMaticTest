{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/test-ir.schema.json",
  "title": "Test Automation IR Schema",
  "type": "object",
  "required": ["meta", "steps"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["id", "name"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "priority": { "type": "string" },
        "author": { "type": "string" },
        "version": { "type": "string" },
        "tags": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "additionalProperties": false
    },

    "environment": {
      "type": "object",
      "additionalProperties": true
    },

    "variables": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": ["type", "value"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["int", "float", "string", "bool"]
          },
          "value": {}
        },
        "additionalProperties": false
      }
    },

    "preconditions": {
      "type": "array",
      "items": { "$ref": "#/$defs/conditionExpression" }
    },

    "steps": {
      "type": "array",
      "items": { "$ref": "#/$defs/step" }
    },

    "postconditions": {
      "type": "array",
      "items": { "$ref": "#/$defs/conditionExpression" }
    },

    "cleanup": {
      "type": "array",
      "items": { "$ref": "#/$defs/step" }
    }
  },

  "$defs": {

    "step": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "id": { "type": "string" },

        "type": {
          "type": "string",
          "enum": [
            "action",
            "check",
            "wait",
            "condition",
            "loop",
            "parallel"
          ]
        },

        "target": { "type": "string" },

        "operation": { "type": "string" },

        "params": {
          "type": "object",
          "additionalProperties": true
        },

        "property": { "type": "string" },

        "operator": {
          "type": "string",
          "enum": ["==", "!=", ">", "<", ">=", "<=", "contains", "matches"]
        },

        "value": {},

        "timeout": { "type": "integer", "minimum": 0 },

        "interval": { "type": "integer", "minimum": 0 },

        "condition": { "$ref": "#/$defs/conditionExpression" },

        "if": { "$ref": "#/$defs/conditionExpression" },

        "then": {
          "type": "array",
          "items": { "$ref": "#/$defs/step" }
        },

        "else": {
          "type": "array",
          "items": { "$ref": "#/$defs/step" }
        },

        "times": {
          "type": "integer",
          "minimum": 1
        },

        "while": { "$ref": "#/$defs/conditionExpression" },

        "steps": {
          "type": "array",
          "items": { "$ref": "#/$defs/step" }
        },

        "on_failure": {
          "type": "object",
          "required": ["strategy"],
          "properties": {
            "strategy": {
              "type": "string",
              "enum": ["abort", "continue", "retry", "goto"]
            },
            "goto": { "type": "string" }
          },
          "additionalProperties": false
        }
      },

      "allOf": [
        {
          "if": { "properties": { "type": { "const": "action" } } },
          "then": {
            "required": ["target", "operation"]
          }
        },
        {
          "if": { "properties": { "type": { "const": "check" } } },
          "then": {
            "required": ["target", "property", "operator", "value"]
          }
        },
        {
          "if": { "properties": { "type": { "const": "wait" } } },
          "then": {
            "required": ["condition"]
          }
        },
        {
          "if": { "properties": { "type": { "const": "condition" } } },
          "then": {
            "required": ["if", "then"]
          }
        },
        {
          "if": { "properties": { "type": { "const": "loop" } } },
          "then": {
            "anyOf": [
              { "required": ["times", "steps"] },
              { "required": ["while", "steps"] }
            ]
          }
        },
        {
          "if": { "properties": { "type": { "const": "parallel" } } },
          "then": {
            "required": ["steps"]
          }
        }
      ]
    },

    "conditionExpression": {
      "type": "object",
      "required": ["target", "property", "operator", "value"],
      "properties": {
        "target": { "type": "string" },
        "property": { "type": "string" },
        "operator": {
          "type": "string",
          "enum": ["==", "!=", ">", "<", ">=", "<=", "contains", "matches"]
        },
        "value": {}
      },
      "additionalProperties": false
    }

  },

  "additionalProperties": false
}
