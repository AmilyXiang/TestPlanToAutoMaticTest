{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/object-model.schema.json",
  "title": "Object Model Schema",
  "type": "object",
  "required": ["objects"],
  "additionalProperties": false,

  "properties": {
    "objects": {
      "type": "array",
      "items": { "$ref": "#/$defs/objectDefinition" }
    }
  },

  "$defs": {

    "objectDefinition": {
      "type": "object",
      "required": ["name", "properties"],
      "additionalProperties": false,
      "properties": {

        "name": {
          "type": "string",
          "description": "Object name (e.g., Device, Network)"
        },

        "description": {
          "type": "string"
        },

        "properties": {
          "type": "array",
          "items": { "$ref": "#/$defs/propertyDefinition" }
        }

      }
    },

    "propertyDefinition": {
      "type": "object",
      "required": ["name", "type"],
      "additionalProperties": false,
      "properties": {

        "name": {
          "type": "string"
        },

        "type": {
          "type": "string",
          "enum": ["string", "int", "float", "bool", "enum"]
        },

        "description": {
          "type": "string"
        },

        "enum_values": {
          "type": "array",
          "items": { "type": "string" }
        },

        "minimum": {
          "type": "number"
        },

        "maximum": {
          "type": "number"
        },

        "default": {},

        "nullable": {
          "type": "boolean",
          "default": false
        }

      },

      "allOf": [
        {
          "if": {
            "properties": { "type": { "const": "enum" } }
          },
          "then": {
            "required": ["enum_values"]
          }
        },
        {
          "if": {
            "properties": { "type": { "enum": ["int", "float"] } }
          },
          "then": {
            "properties": {
              "minimum": { "type": "number" },
              "maximum": { "type": "number" }
            }
          }
        }
      ]

    }

  }
}
