{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/api-capability.schema.json",
  "title": "API Capability Model Schema",
  "type": "object",
  "required": [
    "name",
    "object",
    "description",
    "parameters"
  ],

  "properties": {

    "name": {
      "type": "string",
      "description": "Unique API function name"
    },

    "object": {
      "type": "string",
      "description": "Target object this API controls"
    },

    "category": {
      "type": "string",
      "enum": [
        "control",
        "query",
        "configuration",
        "lifecycle",
        "diagnostic"
      ]
    },

    "description": {
      "type": "string"
    },

    "parameters": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/parameter"
      }
    },

    "returns": {
      "$ref": "#/$defs/returnSpec"
    },

    "preconditions": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/stateCondition"
      }
    },

    "effects": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/effect"
      }
    },

    "state_transitions": {
      "type": "array",
      "items": {
        "$ref": "#/$defs/stateTransition"
      }
    },

    "idempotent": {
      "type": "boolean"
    },

    "timeout_ms": {
      "type": "integer",
      "minimum": 0
    },

    "tags": {
      "type": "array",
      "items": { "type": "string" }
    }
  },

  "$defs": {

    "parameter": {
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "name": { "type": "string" },
        "type": {
          "type": "string",
          "enum": [
            "int",
            "float",
            "string",
            "bool",
            "enum",
            "object"
          ]
        },
        "required": { "type": "boolean" },
        "default": {},
        "enum_values": {
          "type": "array",
          "items": { "type": "string" }
        },
        "description": { "type": "string" }
      },
      "additionalProperties": false
    },

    "returnSpec": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "void",
            "int",
            "float",
            "string",
            "bool",
            "object"
          ]
        },
        "properties": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "additionalProperties": false
    },

    "stateCondition": {
      "type": "object",
      "required": ["property", "operator", "value"],
      "properties": {
        "property": { "type": "string" },
        "operator": {
          "type": "string",
          "enum": ["==", "!=", ">", "<", ">=", "<="]
        },
        "value": {}
      },
      "additionalProperties": false
    },

    "effect": {
      "type": "object",
      "required": ["property", "action"],
      "properties": {
        "property": { "type": "string" },
        "action": {
          "type": "string",
          "enum": [
            "set",
            "increment",
            "decrement",
            "append",
            "clear"
          ]
        },
        "value": {}
      },
      "additionalProperties": false
    },

    "stateTransition": {
      "type": "object",
      "required": ["from", "to"],
      "properties": {
        "property": { "type": "string" },
        "from": { "type": "string" },
        "to": { "type": "string" }
      },
      "additionalProperties": false
    }

  },

  "additionalProperties": false
}
